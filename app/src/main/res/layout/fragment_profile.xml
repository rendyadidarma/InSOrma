<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="emailaddress@gmail.com"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"/>
        // email end
        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username Temporary"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/edit_username"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input new Username"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"/>
        // username end
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0895959231321"
            android:textSize="24sp"/>
        // phone number end

        <View android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <Button
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Edit Username"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Save Username"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/delete_acc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Delete Account"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Log Out"
                android:layout_gravity="center"
                android:backgroundTint="@color/red"
                />



    </LinearLayout>




</FrameLayout>